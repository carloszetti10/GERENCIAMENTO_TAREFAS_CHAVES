<UserControl x:Class="GERENC_WPF.View.PagePrinc.GerencTarefaView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:GERENC_WPF.View.PagePrinc"
      mc:Ignorable="d" 
      Background="#F5F7FB">


    <!-- Layout -->
    <Grid Margin="20,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <StackPanel>
            <TextBlock Text="Gerenciamento de tarefas"
                   FontSize="28"
                   FontWeight="Bold"/>
            <TextBlock Text="Gerencia as tarefas dos seus instrutores"
                   Foreground="{StaticResource SegundaBrush}"/>
        </StackPanel>

        <!--Cards-->
        <Grid Grid.Row="1" Margin="0,10">


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- CARDS -->
            <WrapPanel Grid.Column="0"
           HorizontalAlignment="Left"
           Margin="0,0,0,20">

                <Border Style="{StaticResource CardBlueStyle}"
                  Width="160"
                  Margin="0,0,12,12">
                    <StackPanel>
                        <TextBlock Text="2"
                       FontSize="28"
                       FontWeight="Bold"/>
                        <TextBlock Text="Instrutores cadastrados"/>
                        
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardGreenStyle}"
            Width="160"
            Margin="0,0,12,12">
                    <StackPanel>
                        <TextBlock Text="1"
                       FontSize="28"
                       FontWeight="Bold"/>
                        <TextBlock Text="Tarefas ativas"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardYellowStyle}"
            Width="160"
            Margin="0,0,12,12">
                    <StackPanel>
                        <TextBlock Text="1"
                       FontSize="28"
                       FontWeight="Bold"/>
                        <TextBlock Text="Instrutores sem tarefas"/>
                    </StackPanel>
                </Border>

            </WrapPanel>

            <!-- BOTÕES -->
            <WrapPanel
           HorizontalAlignment="Center" Margin="0,19,0,45" Width="315" Grid.Column="1">

                <Button Style="{StaticResource ButtonPadrao}"
                    Margin="5"
                    Command="{Binding AbrirTelaTarefaCommand}">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Icon="Adjust" Margin="0,0,8,0"/>
                        <TextBlock Text="Tarefa"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource ButtonPadrao}"
                    Margin="5"
                    Command="{Binding AbrirTelaInstrutorCommand}">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Icon="BalanceScale" Margin="0,0,8,0"/>
                        <TextBlock Text="Instrutor"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource ButtonPadrao}" 
                     Margin="5"
                     Command="{Binding AbrirTelaCursoCommand}">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Icon="ThermometerHalf" Margin="0,0,8,0"/>
                        <TextBlock Text="Curso"/>
                    </StackPanel>
                </Button>

            </WrapPanel>

        </Grid>

        <!--Tabela-->
        <Grid Grid.Row="2"
         Background="Transparent"
         Margin="0">

            <!-- Layout principal -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================= FILTROS ================= -->
            <Grid Grid.Row="0" Margin="0,16,0,16">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ========== CURSO ========= -->
                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="Curso:" Margin="0,0,0,4"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0" Height="36" IsEditable="True" IsReadOnly="True"/>

                        <Button Grid.Column="1"
                        Height="36"
                        Margin="0,0,0,0"
                        Padding="12,0">
                            <fa:FontAwesome Icon="Search"/>
                        </Button>
                    </Grid>
                </StackPanel>

                <!-- ========== INSTRUTOR ========= -->
                <StackPanel Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="Instrutor:" Margin="0,0,0,4"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                         Height="36"
                         IsEditable="True"
                         IsReadOnly="True"/>

                        <Button Grid.Column="1"
                         Height="36"
                         Margin="0,0,0,0"
                         Padding="12,0">
                            <fa:FontAwesome Icon="Search"/>
                        </Button>
                    </Grid>
                </StackPanel>

                <!-- ========== STATUS (SEM BOTÃO) ========= -->
                <StackPanel Grid.Column="2" Margin="0,0,12,0">
                    <TextBlock Text="Status:" Margin="0,0,0,4"/>
                    <ComboBox Height="36"/>
                </StackPanel>

                <!-- LIMPAR -->
                <Button Grid.Column="3"
        Height="36"
        Margin="0,20,12,0"
        Padding="16,0">
                    Limpar Filtros
                </Button>

                <!-- RELATÓRIO -->
                <Button Grid.Column="4"
        Height="36"
        Margin="0,20,0,0"
        Padding="16,0">
                    Gerar Relatório
                </Button>

            </Grid>


            <!-- ================= TABELA ================= -->
            <Border Grid.Row="1"
             Padding="2"
             CornerRadius="8,8,1,1"
             BorderThickness="0"
             Background="{StaticResource TextBrush}">

                <DataGrid ItemsSource="{Binding Tarefas}"
                 Margin="0"
                 BorderThickness="0"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch">

                    <DataGrid.Columns >

                        <DataGridTextColumn Header="CODIGO"
                              Binding="{Binding Codigo}"
                              Width="1*"
                              ElementStyle="{StaticResource DataGridCellTextStyle}"/>

                        <DataGridTextColumn Header="CURSO"
                                Binding="{Binding Curso}"
                                Width="2*"
                                ElementStyle="{StaticResource DataGridCellTextStyle}"/>

                        <DataGridTextColumn Header="INSTRUTOR"
                                Binding="{Binding Instrutor}"
                                Width="2*"
                                ElementStyle="{StaticResource DataGridCellTextStyle}"/>

                        <DataGridTextColumn Header="PERÍODO"
                                Binding="{Binding Periodo}"
                                Width="1.5*"
                                ElementStyle="{StaticResource DataGridCellTextStyle}"/>

                        <DataGridTextColumn Header="TURNO"
                                Binding="{Binding Turno}"
                                Width="1.2*"
                                ElementStyle="{StaticResource DataGridCellTextStyle}"/>

                        <DataGridTextColumn Header="DIAS"
                                Binding="{Binding Dias}"
                                Width="1.5*"
                                ElementStyle="{StaticResource DataGridCellTextStyle}"/>
                        <DataGridTextColumn Header="STATUS"
                                Binding="{Binding Status}"
                                Width="1.5*"
                                ElementStyle="{StaticResource DataGridCellTextStyle}"/>

                        <DataGridTemplateColumn Header="AÇÃO" Width="1.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                </DataGrid>

            </Border>

        </Grid>


    </Grid>
</UserControl>
