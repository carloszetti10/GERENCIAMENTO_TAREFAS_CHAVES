<Window x:Class="GERENC_WPF.View.PagePrinc.InicialView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="700"
        Height="420"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False">

    <Border CornerRadius="18">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F4C81" Offset="0"/>
                <GradientStop Color="#1E88E5" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- LOGO / TÍTULO -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                <TextBlock Text="ZTask"
                           FontSize="42"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Organize. Execute. Conclua."
                           FontSize="16"
                           Foreground="#E0E0E0"
                           Margin="0,6,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- FEATURES -->
            <Grid Grid.Row="1" Margin="0,40,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Tarefas -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="📋"
                               FontSize="42"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Gerencie suas Tarefas"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,10,0,0"
                               TextAlignment="Center"/>
                </StackPanel>

                <!-- Segurança -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="🔐"
                               FontSize="42"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Controle de Acessos"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,10,0,0"
                               TextAlignment="Center"/>
                </StackPanel>

                <!-- Produtividade -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="📈"
                               FontSize="42"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Aumente sua Produtividade"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,10,0,0"
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- LOADING -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                <ProgressBar Width="220"
                             Height="6"
                             IsIndeterminate="True"/>
                <TextBlock Text="Carregando o ZTask..."
                           Foreground="#E0E0E0"
                           FontSize="12"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
