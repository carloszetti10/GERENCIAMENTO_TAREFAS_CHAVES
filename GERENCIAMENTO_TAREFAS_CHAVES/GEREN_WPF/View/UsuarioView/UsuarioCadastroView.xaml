<Window x:Class="GERENC_WPF.View.UsuarioView.UsuarioCadastroView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helper="clr-namespace:GERENC_WPF.Helper"
        Title="Cadastro de Usuários"
        Width="650"
        Height="580"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Background="#F2F2F2">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Cadastro -->
            <ColumnDefinition Width="3*"/>
            <!-- Lista -->
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- CADASTRO -->
        <!-- ===================== -->
        <GroupBox Grid.Column="0"
                  Header="Cadastro de Usuário"
                  Padding="10"
                  Margin="0,0,10,0"
                  Background="White"
                  BorderBrush="#CCC"
                  BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Nome -->
                    <RowDefinition Height="Auto"/>
                    <!-- CPF -->
                    <RowDefinition Height="Auto"/>
                    <!-- Login -->
                    <RowDefinition Height="Auto"/>
                    <!-- Senha -->
                    <RowDefinition Height="Auto"/>
                    <!-- Tipo -->
                    <RowDefinition Height="Auto"/>
                    <!-- Categorias -->
                    <RowDefinition Height="Auto"/>
                    <!-- Botões -->
                </Grid.RowDefinitions>

                <!-- Nome -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Nome"/>
                    <TextBox Height="28"
                             Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- CPF -->
                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                    <TextBlock Text="CPF"/>
                    <TextBox Height="28"
                             Text="{Binding Cpf, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Usuário -->
                <StackPanel Grid.Row="2" Margin="0,0,0,10">
                    <TextBlock Text="Usuário"/>
                    <TextBox Height="28"
                             Text="{Binding Usuario, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Senha -->
                <StackPanel Grid.Row="3" Margin="0,0,0,10">
                    <TextBlock Text="Senha"/>
                    <PasswordBox Height="28"
                                helper:PasswordBoxHelper.BindPassword="True"
                                helper:PasswordBoxHelper.Password="{Binding Senha, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Tipo -->
                <StackPanel Grid.Row="4" Margin="0,0,0,10">
                    <TextBlock Text="Tipo de Usuário"/>
                    <ComboBox Height="28"
                              ItemsSource="{Binding TiposUsuario}"
                              SelectedItem="{Binding TipoSelecionado}"/>
                </StackPanel>

                <!-- Categorias (Agente) -->
                <GroupBox Header="Categorias" Grid.Row="5">

                    <GroupBox.Style>
                        <Style TargetType="GroupBox">

                            <!--  Começa escondido -->
                            <Setter Property="Visibility" Value="Collapsed"/>

                            <Style.Triggers>
                                <!--  Mostra quando MostrarCategorias = true -->
                                <DataTrigger Binding="{Binding MostrarCategorias}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>

                        </Style>
                    </GroupBox.Style>

                    <!-- SEU CONTEÚDO -->
                    <ScrollViewer Height="150">
                        <ItemsControl ItemsSource="{Binding Categorias}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Nome}"
                                     IsChecked="{Binding Selecionada}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </GroupBox>

                <!-- Botões -->
                <StackPanel Grid.Row="6"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Content="Salvar"
                            Width="90"
                            Margin="5"
                            Command="{Binding SalvarCommand}"/>

                    <Button Content="Alterar"
                            Width="90"
                            Margin="5"
                            Command="{Binding AlterarCommand}"/>

                   
                </StackPanel>

            </Grid>
        </GroupBox>

        <!-- ===================== -->
        <!-- LISTA -->
        <!-- ===================== -->
        <GroupBox Grid.Column="1"
                  Header="Usuários Cadastrados"
                  Padding="10"
                  Background="White"
                  BorderBrush="#CCC"
                  BorderThickness="1">

            <Border Grid.Row="1"
             Padding="2"
             CornerRadius="8,8,1,1"
             BorderThickness="0"
             Background="{StaticResource TextBrush}">

                <DataGrid ItemsSource="{Binding Usuarios}"
                      SelectedItem="{Binding UsuarioSelecionado, Mode=TwoWay}"
                      Margin="0"
                     HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch">

                <DataGrid.Columns>
                    
                    
                    <DataGridTextColumn Header="Codigo"
                                        Binding="{Binding Id}"
                                        Width="*"
                                        ElementStyle="{StaticResource DataGridCellTextStyle}"/>

                    <DataGridTextColumn Header="Usuário"
                                        Binding="{Binding UsuarioLogin}"
                                        ElementStyle="{StaticResource DataGridCellTextStyle}"
                                        Width="*"/>

                    <DataGridTextColumn Header="Tipo"
                                        Binding="{Binding Tipo}"
                                        ElementStyle="{StaticResource DataGridCellTextStyle}"
                                        Width="*"/>
                </DataGrid.Columns>

                </DataGrid>
                </Border>
        </GroupBox>

    </Grid>
</Window>
