<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- CORES -->
    <Color x:Key="BackgroundColor">#F4F6FA</Color>
    <Color x:Key="SidebarColor">#6C757D</Color>
    <Color x:Key="PrimaryColor">#2563EB</Color>
    <Color x:Key="DangerColor">#DC2626</Color>
    <Color x:Key="TextColor">#212529</Color>
    <Color x:Key="TranparenteColor">Transparent</Color>


    <SolidColorBrush x:Key="TextoBranco" Color="#F5F7FA"/>
    <SolidColorBrush x:Key="CardBackground" Color="White"/>
    <SolidColorBrush x:Key="BotaoPrimario" Color="#212529"/>
   
 

    <!-- BRUSHES -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SegundaBrush" Color="{DynamicResource SidebarColor}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{DynamicResource DangerColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource TextColor}"/>

    <FontFamily x:Key="MenuFont">Segoe UI</FontFamily>
    <SolidColorBrush x:Key="MenuHoverBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="MenuPressedBrush" Color= "{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="MenuTranparent" Color= "{DynamicResource TranparenteColor}"/>

</ResourceDictionary>
