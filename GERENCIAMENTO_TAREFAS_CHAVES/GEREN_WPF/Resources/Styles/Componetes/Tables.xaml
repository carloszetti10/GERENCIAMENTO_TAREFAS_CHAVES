<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================= -->
    <!-- TEXTO DAS CÉLULAS (ALINHADO À ESQUERDA)            -->
    <!-- ================================================= -->
    <Style x:Key="DataGridCellTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#374151"/>

        <!-- ALTERAÇÃO: alinhamento padrão de tabela -->
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="3,0,0,0"/>
    </Style>

    <!-- ================================================= -->
    <!-- CÉLULA DO DATAGRID                                -->
    <!-- ================================================= -->
    <Style TargetType="DataGridCell">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="BorderBrush" Value="#E5E7EB"/>

        <!-- ALTERAÇÃO: conteúdo alinhado à esquerda -->
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        
    </Style>

    <!-- ================================================= -->
    <!-- CABEÇALHO DAS COLUNAS                             -->
    <!-- ================================================= -->
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextoBranco}"/>
        <Setter Property="Padding" Value="14"/>
        <!-- 🔥 PADRÃO IGUAL À CÉLULA -->
        <Setter Property="Padding" Value="1,8"/>
        
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextoBranco}"/>
        <Setter Property="Background" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>

        <!-- Cabeçalho alinhado com os dados -->
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <!-- ================================================= -->
    <!-- LINHAS (ZEBRA)                                    -->
    <!-- ================================================= -->
    <Style TargetType="DataGridRow">
        <Setter Property="Height" Value="56"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="White"/>

        

        <Style.Triggers>
            <!-- Linha alternada -->
            <Trigger Property="AlternationIndex" Value="1">
                <Setter Property="Background" Value="#F9FAFB"/>
            </Trigger>

            <!-- Hover -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F3F4F6"/>
            </Trigger>

            <!-- Selecionado -->
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#E5E7EB"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ================================================= -->
    <!-- DATAGRID BASE                                     -->
    <!-- ================================================= -->
    <Style TargetType="DataGrid">
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>

        <!-- ALTERAÇÃO: tabela SOMENTE LEITURA -->
        <Setter Property="IsReadOnly" Value="True"/>

        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="RowHeaderWidth" Value="0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="ColumnWidth" Value="*"/>

        <!-- Necessário para zebra funcionar -->
        <Setter Property="AlternationCount" Value="2"/>
    </Style>

    <!-- ================================================= -->
    <!-- BOTÃO DE STATUS (SEM ALTERAÇÃO)                   -->
    <!-- ================================================= -->
    <Style x:Key="StatusButtonStyle" TargetType="Button">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <!--<Border CornerRadius="14"
                            Padding="12,6"
                            Background="{Binding Ativo, Converter={StaticResource StatusBackgroundConverter}}">
                        <TextBlock
                            Text="{Binding Ativo, Converter={StaticResource StatusTextConverter}}"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="{Binding Ativo, Converter={StaticResource StatusTextColorConverter}}"
                            HorizontalAlignment="Center"/>
                    </Border>-->
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
