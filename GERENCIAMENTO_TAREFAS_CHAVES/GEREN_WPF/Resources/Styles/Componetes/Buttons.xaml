    <!-- BOTÃO PADRÃO -->
    <Style x:Key="ButtonPadrao" TargetType="Button">
        <!-- Texto -->
        <Setter Property="Foreground" Value="{DynamicResource TextoBranco}"/>
        <Setter Property="FontFamily" Value="{DynamicResource MenuFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>

        <!-- Layout -->
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="Margin" Value="0,6"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>

        <!-- Remove estilo padrão -->
        <Setter Property="Background" Value="{DynamicResource TextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>

        <!-- Template -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                     Background="{TemplateBinding Background}"
                     CornerRadius="3"
                     Padding="{TemplateBinding Padding}">

                        <!-- Sombra -->
                        <Border.Effect>
                            <DropShadowEffect
                            BlurRadius="15"
                            ShadowDepth="2"
                            Direction="270"
                            Opacity="0.35"/>
                        </Border.Effect>

                        <ContentPresenter VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Root"
                             Property="Background"
                             Value="{DynamicResource MenuHoverBrush}"/>
                        </Trigger>

                        <!-- Pressionado -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Root"
                             Property="Background"
                             Value="{DynamicResource MenuPressedBrush}"/>

                            <Setter TargetName="Root"
                             Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="6"
                                               ShadowDepth="0"
                                               Opacity="0.15"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Desabilitado -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ExpanderPadrao" TargetType="Expander">
        <Setter Property="Foreground" Value="{DynamicResource TextoBranco}"/>
        <Setter Property="FontFamily" Value="{DynamicResource MenuFont}"/>
        <Setter Property="Background" Value="{DynamicResource TextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="8"/>

        <!-- Sombra -->
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                BlurRadius="15"
                ShadowDepth="2"
                Direction="270"
                Opacity="0.35"/>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="ButtonPadraoCabecalho"
       TargetType="Button"
       BasedOn="{StaticResource ButtonPadrao}">

        <!-- Texto menor -->
        <Setter Property="FontSize" Value="12"/>

        <!-- Botão menor -->
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="0,4"/>
    </Style>



</ResourceDictionary>
